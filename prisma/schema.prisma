generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String   @id @default(cuid())
  email                 String   @unique
  password              String?
  name                  String?
  phone                 String?
  credits               Int      @default(0)
  role                  String   @default("user")
  asaasSubscriptionId   String?  @unique  // ID da subscription ativa no Asaas
  prompts               Prompt[]
  qrReads               QRReading[]
  createdAt             DateTime @default(now())
}

model Prompt {
  id        String   @id @default(cuid())
  title     String?
  content   String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model QRReading {
  id        String   @id @default(cuid())
  code      String
  data      String?
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  createdAt DateTime @default(now())
}
